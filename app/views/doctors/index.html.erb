<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<%= search_form_for @q do |f| %>
<h2>Search for Available/Free Doctor</h2>
  <%#= f.label :appointment_start_from %>
  <%= f.datetime_local_field :appointments_start_from_not_cont %>

  <%# # Search if an associated articles.title starts with... %>
  <%#= f.label :articles_title_start %>
  <%#= f.search_field :articles_title_start %>

  <%# # Attributes may be chained. Search multiple attributes for one value... %>
  <%#= f.label :name_or_description_or_email_or_articles_title_cont %>
  <%#= f.search_field :name_or_description_or_email_or_articles_title_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.age %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
